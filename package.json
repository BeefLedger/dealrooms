{
  "name": "dealrooms",
  "version": "0.1.0",
  "description": "Allow the safe exchange of fungible ERC-20 tokens for non-fungible ERC-721 tokens which represent real-world assets.",
  "private": false,
  "browser": {
    "child_process": false,
    "fs": false
  },
  "main": "index.ts",
  "scripts": {
    "test": "jest --runInBand",
    "contracts:type": "yarn typechain --target ./node_modules/@typechain/ethers-v4 --outDir ./ethereum/types './ethereum/abi/**/*.json'",
    "contracts:clear": "rm -rf ./ethereum/abi && rm -rf ./ethereum/types",
    "contracts:build": "yarn contracts:clear && yarn contracts:compile && yarn contracts:type",
    "contracts:compile": "cd ethereum && truffle compile",
    "remix": "remixd -s ./contracts --remix-ide https://remix.ethereum.org",
    "testrpc": "ganache-cli --db ./ethereum/db  -m abuse forget cool step task knife bargain vacant lemon manual various pride",
    "dev": "next dev",
    "dev2": "NODE_OPTIONS='--inspect' next dev",
    "build": "yarn contracts:build && next build",
    "start": "next start"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "abi-decoder": "^2.3.0",  
    "config": "^3.3.2",
    "date-fns": "^2.11.1",
    "ethers": "4",
    "gray-matter": "^4.0.2",
    "remark": "^12.0.0",
    "remark-html": "^11.0.1",
    "swr": "^0.3.2"
  },
  "devDependencies": {
    "truffle": "5.1.25",
    "webpack": "^4.44.1",
    "yargs": "^15.4.1",
    "bootstrap": "^4.5.2",
    "nextjs": "^0.0.3",
    "next": "9.3.5",
    "mongoose": "^5.10.11",
    "react": "16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "16.13.1",
    "magic-sdk": "latest",
    "@types/mongoose": "^5.7.36",
    "@typechain/ethers-v4": "^1.0.0",
    "@types/jest": "^26.0.7",
    "@types/react": "^16.9.49",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.4",
    "typechain": "^2.0.0",
    "typescript": "^4.0.2"
  }
}
